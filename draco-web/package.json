{
    "name": "draco-vis",
    "version": "0.0.1",
    "description": "Draco on the web.",
    "main": "build/src/Draco.js",
    "typings": "build/src/Draco.d.ts",
    "scripts": {
        "test": "jest",
        "concat": "bash concat_lp.sh ../asp src",
        "build": "rm -rf build && tsc && rollup -c",
        "format": "tslint -p . --fix && prettier --write '{src,test}/**/*.ts'",
        "lint": "tslint -p . && prettier --list-different '{src,test}/**/*.ts'",
        "watch": "concurrently --kill-others -n Typescript,Rollup 'tsc -w' 'rollup -c -w'",
        "serve": "python serve.py"
    },
    "author": "Dominik Moritz",
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/node": "^10.1.3",
        "concurrently": "^3.5.1",
        "jest": "^23.0.1",
        "prettier": "^1.13.0",
        "rollup": "^0.59.3",
        "rollup-plugin-commonjs": "^9.1.3",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-resolve": "^3.3.0",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "^2.8.3"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testPathIgnorePatterns": [
            "node_modules",
            "<rootDir>/build",
            "src"
        ]
    },
    "dependencies": {
        "vega-lite": "^2.4.3",
        "wasm-clingo": "0.0.5"
    },
    "private": true
}
